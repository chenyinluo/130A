/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page{
  font-family: "Microsoft Yahei";
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.page-header{
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;

}

.page-headerText{
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
}

.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;

}

.item .page-photo{
  width: 150rpx;
  height: 150rpx;
}

.item .page-word{
  flex: 1;
}

.item .title, .item .idNumber{
  display: block;
  margin-bottom: 15rpx;
}

.item .title{
  font-size: 40rpx;
}

.item .idNumber{
  font-size: 30rpx;
}